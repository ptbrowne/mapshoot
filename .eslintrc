{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": 2,
        "no-unused-expressions": 2,
        "no-dupe-keys": 2,
        "no-undef": 2,
        "no-unused-vars": [2, { "args": "none" }],
        "react/jsx-uses-vars": 1,
        "radix": 2,
        "indent": [2, 2]
    },
    "env": {
        "browser": true
    },
    "globals": {
      "React": true,
      "describe": true,
      "beforeEach": true,
      "afterEach": true,
      "spyOn": true,
      "it": true,
      "xit": true,
      "expect": true,
      "sinon": true,
      "getJSONFixture": true,
      "jasmine": true,
      "google": true,
      "fdescribe": true,
      "xdescribe": true,
      "fit": true,
      "console": true,
      "module": true,
      "setTimeout": true,
      "require": true,
      "L": true,
      "TweenLite": true,
      "requestAnimationFrame": true
    },
    "parser": "babel-eslint",
    "plugins": [
       "eslint-plugin-react"
    ],
    "format": "compact"
}
